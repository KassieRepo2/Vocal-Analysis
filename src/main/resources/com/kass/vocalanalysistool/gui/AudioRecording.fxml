                <Label prefHeight="28.0" prefWidth="4.0" text=":">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Label>
                <Label fx:id="myMinuteLabel" prefHeight="28.0" prefWidth="17.0" text="99">
