                <font>
                    <Font name="Candara Bold" size="16.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button fx:id="myCloseBtn" styleClass="ar_exit-btn" alignment="CENTER" minWidth="130.0" prefHeight="30.0"
                    prefWidth="152.0"
                    onAction="#handleCloseBtn"
                    text="Close">
                <font>
                    <Font name="Candara Bold" size="16.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </HBox>
    </Pane>
</AnchorPane>
