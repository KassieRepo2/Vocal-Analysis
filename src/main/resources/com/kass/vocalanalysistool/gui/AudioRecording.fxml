                    minWidth="-Infinity"
                    onAction="#handleRecordBtn"
                    mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <HBox styleClass="ar_hBox" alignment="CENTER" prefHeight="28.0" prefWidth="81.0">
                <Label fx:id="myHourLabel" prefHeight="28.0" prefWidth="17.0" text="99">
